{
  "manifest_version": 2,
  "name": "OrigClick",
  "short_name": "OrigClick",
  "description": "Easy way to get original size picture from twitter timeline.",
  "default_locale": "en",
  "version": "0.2.0",
  "icons": { 
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
   "128": "./icons/icon128.png" },
  "browser_action": {
    "default_title": "OrigClick"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://twitter.com/*",
        "https://twitter.com/*"
      ],
      
      "js": [
        "main.js"
      ],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "http://twitter.com/*",
    "https://twitter.com/*",
    "activeTab",
    "tabs",
    "downloads"
  ]
}