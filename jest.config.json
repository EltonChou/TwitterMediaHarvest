{
  "preset": "ts-jest/presets/default-esm",
  "verbose": true,
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "transform": {
    "\\.[jt]sx?$": "babel-jest"
  },
  "setupFiles": [
    "fake-indexeddb/auto"
  ],
  "setupFilesAfterEnv": [
    "./jest.setup.js"
  ],
  "moduleNameMapper": {
    "@backend/(.*)$": "<rootDir>/src/backend/$1",
    "#backend/(.*)$": "<rootDir>/src/backend/$1",
    "#libs/(.*)$": "<rootDir>/src/libs/$1",
    "@libs/(.*)$": "<rootDir>/src/libs/$1",
    "#domain/(.*)$": "<rootDir>/src/domain/$1"
  },
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/backend/**/*.ts",
    "src/lib/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/src/*/*/d.ts"
  ]
}